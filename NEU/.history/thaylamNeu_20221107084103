                        var cb=document.querySelectorAll('#page .content .left-content .content-block');
                        console.log(cb);
                        var n=cb.length;
                        for(var i=0;i<n;i++) 
                            cb[i].style.display='none';
                        i=0;
                        setInterval(function(){
                            cb[i].style.display='none';
                            i++;
                            if(i==n) i=0;
                            cb[i].style.display='block';
